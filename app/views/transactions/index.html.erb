<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Name</th>
      <th>Description</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td>
          <%if !transaction.group.nil? %>
            <%= image_tag  "#{transaction.group.icon}"%>
          <%end%>
        </td>
        <td><%= transaction.name %></td>
        <td><%= transaction.description %></td>
        <td><%= transaction.amount %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= edit_btn(transaction.user_id, transaction.id) %></td>
        <td><%= delete_btn(transaction.user_id, transaction.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path, class: "fake-button fixed-bottom" %>
