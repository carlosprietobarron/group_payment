<div class="total-container">
  <div class="wrapper">Transactions</div>
  <div class="wrapper">Total $ <span><%=@total%></span></div>
</div>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>Name</th>
      <th>Description</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td>
          <%= get_icon(transaction) %>
        </td>
        <td><%= transaction.name %></td>
        <td><%= transaction.description %></td>
        <td><%= transaction.amount %></td>
        <td><%= edit_btn(transaction.user_id, transaction.id) %></td>
        <td><%= delete_btn(transaction.user_id, transaction.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path, class: "fake-button fixed-bottom" %>
