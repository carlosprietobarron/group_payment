<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      
      <li>
        <div class = "container-profiles">
        <%= image_tag  "#{user.avatar}", class: "friend-avatar"%>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  friend_profile_path(user), class: 'profile-link' %>
        </span>
        </div>
      </li>
      
    <% end %>
  </ul>
</section>
